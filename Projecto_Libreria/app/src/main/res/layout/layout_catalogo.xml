<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/layout_catalogo">

    <ImageButton
            android:layout_width="53dp"
            android:layout_height="50dp" app:srcCompat="@drawable/next"
            android:id="@+id/btn_mas"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/txti_numproductos"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:background="@drawable/borde"
            android:id="@+id/txti_numproductos"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_menos"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="53dp"
            android:layout_height="50dp" app:srcCompat="@drawable/before"
            android:id="@+id/btn_menos"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="128dp"
            android:layout_height="80dp" app:srcCompat="@drawable/carrito"
            android:id="@+id/imageButton5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txti_numproductos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.008"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="218dp"
            android:layout_height="160dp" app:layout_constraintStart_toEndOf="@+id/imageButton5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.014"
            app:layout_constraintHorizontal_bias="0.578">

        <TextView
                android:text="@string/txti_titulo"
                android:layout_width="59dp"
                android:layout_height="21dp"
                android:id="@+id/txti_titulo" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"/>
        <TextView
                android:layout_width="136dp"
                android:layout_height="19dp"
                android:id="@+id/txt_titulo" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/txti_titulo"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@string/txti_Autor"
                android:layout_width="57dp"
                android:layout_height="18dp"
                android:id="@+id/textView7" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txti_titulo" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/txti_ISBN"
                android:layout_width="56dp"
                android:layout_height="20dp"
                android:id="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="12dp"/>
        <TextView
                android:text="@string/txti_precio"
                android:layout_width="57dp"
                android:layout_height="18dp"
                android:id="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="12dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:layout_width="136dp"
                android:layout_height="19dp"
                android:id="@+id/txt_autor" app:layout_constraintStart_toEndOf="@+id/textView7"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_titulo"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:layout_width="136dp"
                android:layout_height="17dp"
                android:id="@+id/txt_isbn"
                app:layout_constraintTop_toBottomOf="@+id/txt_autor"
                android:layout_marginTop="12dp" app:layout_constraintStart_toEndOf="@+id/textView8"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="137dp"
                android:layout_height="18dp"
                android:id="@+id/txt_precio"
                app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_isbn" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</>