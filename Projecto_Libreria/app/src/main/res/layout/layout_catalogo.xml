<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/layout_catalogo">

    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/right_icon"
            android:id="@+id/btn_mas"
            android:background="@color/colorCafeClaro"
            app:layout_constraintTop_toTopOf="@+id/txti_numproductos"
            app:layout_constraintBottom_toBottomOf="@+id/txti_numproductos"
            app:layout_constraintStart_toEndOf="@+id/txti_numproductos" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/borde"
            android:id="@+id/txti_numproductos"
            android:gravity="center"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@+id/btn_menos" app:layout_constraintBottom_toBottomOf="@+id/btn_menos"
            app:layout_constraintStart_toEndOf="@+id/btn_menos" android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/left_icon"
            android:id="@+id/btn_menos"
            android:background="@color/colorCafeClaro"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/txt_isbn"/>
    <ImageButton
            android:layout_width="63dp"
            android:layout_height="57dp" app:srcCompat="@drawable/aniadir_carrito"
            android:id="@+id/btn_addCarrito"
            android:background="@color/colorCafeClaro"
            app:layout_constraintTop_toTopOf="@+id/txt_autor"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <TextView
            android:layout_width="136dp"
            android:layout_height="19dp"
            android:id="@+id/txt_titulo"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textColor="@color/colorCafeOscuro"
            android:fontFamily="@font/roboto_medium" android:textSize="20sp"/>
    <TextView
            android:text="@string/txti_Autor"
            android:layout_width="57dp"
            android:layout_height="18dp"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/txt_titulo"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_titulo"/>
    <TextView
            android:text="@string/txti_ISBN"
            android:layout_width="56dp"
            android:layout_height="20dp"
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:text="@string/txt_cantidad"
            android:layout_width="57dp"
            android:layout_height="18dp"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:layout_width="136dp"
            android:layout_height="19dp"
            android:id="@+id/txt_autor"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView7" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView8" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="32dp"/>
    <TextView
            android:layout_width="136dp"
            android:layout_height="17dp"
            android:id="@+id/txt_isbn"
            app:layout_constraintStart_toStartOf="@+id/txt_autor"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintBottom_toBottomOf="@+id/textView8"/>
    <TextView
            android:layout_width="93dp"
            android:layout_height="33dp"
            android:id="@+id/txt_precio"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_addCarrito" android:fontFamily="@font/roboto_medium"
            android:textStyle="bold" android:gravity="center" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/btn_addCarrito"
            app:layout_constraintEnd_toEndOf="@+id/btn_addCarrito"/>
</androidx.constraintlayout.widget.ConstraintLayout>
