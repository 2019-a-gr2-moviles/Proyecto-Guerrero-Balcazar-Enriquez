<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/layout_catalogo" android:background="#00EBEBEB">

    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/rightarrowicon"
            android:id="@+id/btn_mas"
            android:background="@color/colorCafeClaro"
            app:layout_constraintTop_toTopOf="@+id/txti_numproductos"
            app:layout_constraintBottom_toBottomOf="@+id/txti_numproductos"
            app:layout_constraintStart_toEndOf="@+id/txti_numproductos"/>
    <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/borde"
            android:id="@+id/txti_numproductos"
            android:gravity="center"
            android:textSize="8sp"
            app:layout_constraintTop_toTopOf="@+id/btn_menos" app:layout_constraintBottom_toBottomOf="@+id/btn_menos"
            app:layout_constraintStart_toEndOf="@+id/btn_menos"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/leftarrow_icon"
            android:id="@+id/btn_menos"
            android:background="@color/colorCafeClaro" app:layout_constraintStart_toStartOf="@+id/txt_isbn"
            app:layout_constraintTop_toTopOf="@+id/textView30"
            app:layout_constraintBottom_toBottomOf="@+id/textView30"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/addincar_icon"
            android:id="@+id/btn_addCarrito"
            android:background="@color/colorCafeMedio"
            app:layout_constraintTop_toTopOf="@+id/txt_autor" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:layout_width="309dp"
            android:layout_height="30dp"
            android:id="@+id/txt_titulo"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:fontFamily="@font/roboto_medium" android:textSize="20sp"/>
    <TextView
            android:text="@string/txti_Autor"
            android:layout_width="57dp"
            android:layout_height="20dp"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/txt_titulo"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_titulo"/>
    <TextView
            android:text="@string/txti_ISBN"
            android:layout_width="56dp"
            android:layout_height="20dp"
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:text="@string/txti_precio"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/btn_addCarrito"
            app:layout_constraintStart_toStartOf="@+id/btn_addCarrito" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_addCarrito"/>
    <TextView
            android:layout_width="136dp"
            android:layout_height="20dp"
            android:id="@+id/txt_autor"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="32dp"/>
    <TextView
            android:layout_width="136dp"
            android:layout_height="20dp"
            android:id="@+id/txt_isbn"
            app:layout_constraintStart_toStartOf="@+id/txt_autor"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintBottom_toBottomOf="@+id/textView8"/>
    <TextView
            android:layout_width="84dp"
            android:layout_height="38dp"
            android:id="@+id/txt_precio"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:fontFamily="@font/roboto_medium"
            android:textSize="25sp" android:gravity="center_horizontal"/>
    <TextView
            android:text="Cantidad"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView30" app:layout_constraintStart_toStartOf="@+id/textView8"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>
</androidx.constraintlayout.widget.ConstraintLayout>
