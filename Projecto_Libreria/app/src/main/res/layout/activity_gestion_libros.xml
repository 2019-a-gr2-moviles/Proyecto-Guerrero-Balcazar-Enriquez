<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Actividades.GestionLibrosActivity">

    <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/borde"
            android:id="@+id/txt_buscarLibroGestion"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/search_icon"
            android:background="@color/colorCafeOscuro"
            android:padding="10dp"
            android:id="@+id/btn_buscarLibroGestion"
            app:layout_constraintTop_toTopOf="@+id/txt_buscarLibroGestion"
            app:layout_constraintBottom_toBottomOf="@+id/txt_buscarLibroGestion"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="360dp"
            android:layout_height="480dp"
            android:id="@+id/rv_gestionLibros"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_buscarLibroGestion" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_nuevoLibro"/>
    <Button
            android:text="@string/txt_nuevoLibro"
            android:layout_width="360dp"
            android:layout_height="51dp"
            android:id="@+id/btn_nuevoLibro"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorCafeOscuro"
            android:textColor="@color/colorBlanco"/>
</androidx.constraintlayout.widget.ConstraintLayout>