<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:id="@+id/layout_libro_titulo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center_vertical"/>
    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/layout_libro_autor" app:layout_constraintStart_toEndOf="@+id/layout_libro_titulo"
            app:layout_constraintTop_toTopOf="parent" android:gravity="center_vertical"/>
    <TextView
            android:text="TextView"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/layout_libro_isbn" app:layout_constraintStart_toEndOf="@+id/layout_libro_autor"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/layout_libro_btn_editar"
            android:layout_marginEnd="16dp" android:gravity="center_vertical"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/edit_icon"
            android:id="@+id/layout_libro_btn_editar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/layout_libro_btn_borrar"
            android:background="@color/colorBlanco" android:layout_marginEnd="8dp"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/trash_icon"
            android:id="@+id/layout_libro_btn_borrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/colorBlanco"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>