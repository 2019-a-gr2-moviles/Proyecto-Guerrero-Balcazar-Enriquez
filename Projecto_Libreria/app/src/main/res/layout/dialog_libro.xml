<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:text="@string/txti_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"/>
    <TextView
            android:text="@string/txti_Autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <TextView
            android:text="@string/txt_edicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintStart_toStartOf="@+id/textView15"
    />
    <TextView
            android:text="@string/txt_editorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            tools:layout_editor_absoluteX="48dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"/>
    <TextView
            android:text="@string/txti_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintStart_toStartOf="@+id/textView18"
    />
    <TextView
            android:text="@string/txt_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_libro_inputTitulo"
            app:layout_constraintTop_toTopOf="@+id/textView12"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/textView12" android:layout_marginStart="80dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_libro_inputAutor"
            app:layout_constraintTop_toTopOf="@+id/textView15"
            app:layout_constraintBottom_toBottomOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/dialog_libro_inputTitulo"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_libro_inputEdicion"
            app:layout_constraintTop_toTopOf="@+id/textView17"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintStart_toStartOf="@+id/dialog_libro_inputAutor"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_libro_inputEditorial"
            app:layout_constraintTop_toTopOf="@+id/textView18"
            app:layout_constraintBottom_toBottomOf="@+id/textView18"
            app:layout_constraintStart_toStartOf="@+id/dialog_libro_inputEdicion"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_libro_inputPrecio"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/dialog_libro_inputISBN"/>
    <Switch
            android:text="@string/txt_activo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_libro_swithEstado"
            app:layout_constraintTop_toTopOf="@+id/textView20"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="@+id/dialog_libro_inputPrecio"
            app:layout_constraintEnd_toEndOf="@+id/dialog_libro_inputPrecio"/>
    <TextView
            android:text="@string/txti_ISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintStart_toStartOf="@+id/textView19"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_libro_inputISBN"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19"
            app:layout_constraintStart_toStartOf="@+id/dialog_libro_inputEditorial"/>
    <TextView
            android:text="@string/txt_idioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_idioma"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20" app:layout_constraintStart_toStartOf="@+id/textView20"
    />
    <TextView
            android:text="TextView"
            android:layout_width="138dp"
            android:layout_height="37dp"
            android:id="@+id/dialog_libro_inputIdioma"
            app:layout_constraintTop_toTopOf="@+id/txt_idioma"
            app:layout_constraintBottom_toBottomOf="@+id/txt_idioma"
            app:layout_constraintStart_toStartOf="@+id/dialog_libro_inputPrecio"/>
</androidx.constraintlayout.widget.ConstraintLayout>