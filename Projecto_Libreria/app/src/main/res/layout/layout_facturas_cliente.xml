<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="155dp"
            android:layout_height="46dp"
            android:id="@+id/layout_factura_fecha"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical" android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="113dp"
            android:layout_height="50dp"
            android:id="@+id/layout_factura_total"
            app:layout_constraintStart_toEndOf="@+id/layout_factura_fecha"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_irDetalle" android:gravity="center_vertical"/>
    <ImageButton
            android:background="@color/colorCafeOscuro"
            android:layout_width="58dp"
            android:layout_height="50dp" app:srcCompat="@drawable/rightarrow2_icon"
            android:id="@+id/btn_irDetalle"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>