<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Actividades.CarritoActivity">
    <Button

            android:layout_width="350dp"
            android:layout_height="41dp"
            android:padding="10dp"
            android:text="Seguir comprando"
            android:textSize="12sp"
            android:id="@+id/btn_catalogo"
            app:layout_constraintStart_toStartOf="@+id/btn_comprar"
            app:layout_constraintEnd_toEndOf="@+id/btn_comprar" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/colorBlanco"
            android:background="@color/colorCafeClaro"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="358dp"
            android:layout_height="327dp"
            android:id="@+id/rv_carrito"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView23"/>
    <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:text="comprar"
            android:textSize="12sp"
            android:id="@+id/btn_comprar"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/btn_catalogo"
            android:textColor="@color/colorBlanco" android:background="@color/colorCafeMedio"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/txt_debito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/txt_totalPagar"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"/>
    <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_totalPagar"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="60dp"/>
    <TextView
            android:text="@string/txt_metodoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/btn_comprar" android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/txt_totalAPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/rv_carrito"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <TextView
            android:text="Carrito:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:fontFamily="@font/roboto_medium" android:textSize="30sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorCafeMedio"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>