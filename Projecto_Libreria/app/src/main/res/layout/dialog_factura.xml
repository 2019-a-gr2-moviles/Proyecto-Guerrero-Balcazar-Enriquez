<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/txt_totalAPagar"
            android:layout_width="101dp"
            android:layout_height="20dp"
            android:id="@+id/textView11" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:textSize="15sp"/>
    <TextView
            android:layout_width="135dp"
            android:layout_height="20dp"
            android:id="@+id/dialog_factura_totalPagar"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="50dp"/>
    <TextView
            android:text="@string/txt_metodoPago"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView
            android:text="@string/txt_debito"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/dialog_factura_totalPagar"
            app:layout_constraintTop_toTopOf="@+id/textView13"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"/>
    <TextView
            android:text="@string/txt_numero_factura"
            android:layout_width="242dp"
            android:layout_height="20dp"
            android:id="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <EditText
            android:layout_width="187dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_factura_inputNumTarjeta"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"/>
</androidx.constraintlayout.widget.ConstraintLayout>